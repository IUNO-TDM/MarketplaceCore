{
  "swagger": "2.0",
  "info": {
    "description": "IUNO Interface on CodeMeter License Central",
    "version": "1.0.0",
    "title": "CodeMeter License Central",
    "termsOfService": ""
  },
  "host": "localhost:8080",
  "basePath": "/v1",
  "tags": [
    {
      "name": "license",
      "description": "CodeMeter License to work with technology data"
    },
    {
      "name": "article",
      "description": ""
    }
  ],
  "schemes": [
    "https"
  ],
  "paths": {
    "/doLicenseUpdate.php": {
      "post": {
        "tags": [
          "license"
        ],
        "summary": "Get a new license update for a CmDongle.",
        "description": "",
        "operationId": "doLicenseUpdate",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "LicenseUpdate Object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/LicenseContext"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "okay",
            "schema": {
              "type": "object",
              "properties": {
                "Result": {
                  "$ref": "#/definitions/LicenseUpdate"
                }
              }
            }
          },
          "400": {
            "description": "error",
            "schema": {
              "type": "object",
              "properties": {
                "ReturnMessage": {
                  "$ref": "#/definitions/ReturnMessage"
                }
              }
            }
          }
        }
      }
    },
    "/doCreateOrderIUNO.php": {
      "post": {
        "tags": [
          "license"
        ],
        "summary": "Creates and activates a new license for a product and CmDongle.",
        "description": "",
        "operationId": "doCreateOrder",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "LicenseOrder Object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/LicenseOrder"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "okay"
          },
          "400": {
            "description": "error",
            "schema": {
              "type": "object",
              "properties": {
                "ReturnMessage": {
                  "$ref": "#/definitions/ReturnMessage"
                }
              }
            }
          }
        }
      }
    },
    "/doEncryptData.php": {
      "post": {
        "tags": [
          "article"
        ],
        "summary": "Encrypt technologydata",
        "description": "",
        "operationId": "doEncryptData",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Technologydata, firmcode and productcode",
            "required": true,
            "schema": {
              "$ref": "#/definitions/EncryptOrder"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "okay",
            "schema": {
              "type": "object",
              "properties": {
                "Result": {
                  "$ref": "#/definitions/EncryptedData"
                }
              }
            }
          },
          "400": {
            "description": "error",
            "schema": {
              "type": "object",
              "properties": {
                "ReturnMessage": {
                  "$ref": "#/definitions/ReturnMessage"
                }
              }
            }
          }
        }
      }
    },
    "/doCreateItem.php": {
      "post": {
        "tags": [
          "article"
        ],
        "summary": "Create a new article in the license central",
        "description": "",
        "operationId": "doCreateItem",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Metadata object for creating a new technolgoy data set",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Item"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "okay"
          },
          "400": {
            "description": "error",
            "schema": {
              "type": "object",
              "properties": {
                "ReturnMessage": {
                  "$ref": "#/definitions/ReturnMessage"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "LicenseContext": {
      "type": "object",
      "properties": {
        "cmserial": {
          "type": "string",
          "description": "serial number of CmContainer as string",
          "example": "3-312345"
        },
        "context": {
          "type": "string",
          "format": "base64",
          "description": "WibuCmRaC file of CmContainer encoded with base64",
          "example": "SFAgd2FzIGhlcmUhCg=="
        },
        "firmcode": {
          "type": "integer",
          "format": "uint32",
          "default": 6000274
        },
        "cmactid": {
          "type": "string",
          "default": "1000"
        },
        "location": {
          "type": "string",
          "default": "autoupdate"
        }
      }
    },
    "LicenseUpdate": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string",
          "format": "base64",
          "description": "WibuCmRaU file encoded with base64",
          "example": "SFAgd2FzIGhlcmUhCg=="
        },
        "md5": {
          "type": "string",
          "format": "md5",
          "description": "md5 checksum of content"
        }
      }
    },
    "LicenseOrder": {
      "type": "object",
      "properties": {
        "cmserial": {
          "type": "string",
          "description": "serial number of CmContainer the license is ordered for as string",
          "example": "3-312345"
        },
        "customerid": {
          "type": "string",
          "maxLength": 20,
          "description": "name of customer"
        },
        "itemid": {
          "type": "string",
          "description": "number of articel to be licensed"
        },
        "quantity": {
          "type": "integer",
          "format": "int32",
          "description": "amount of licenses to be issued"
        }
      }
    },
    "EncryptOrder": {
      "type": "object",
      "properties": {
        "firmcode": {
          "type": "integer",
          "format": "uint32",
          "default": 6000274
        },
        "productcode": {
          "type": "integer",
          "format": "uint32",
          "description": "product code for encryption"
        },
        "buffer": {
          "type": "string",
          "format": "base64",
          "description": "base64 encoded raw data to be encrypted",
          "minLength": 24,
          "example": "MDk4NzY1NDMyMWFiY2RlZmdoCg=="
        }
      }
    },
    "EncryptedData": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string",
          "format": "base64",
          "description": "encrypted data encoded with base64"
        },
        "md5": {
          "type": "string",
          "format": "md5",
          "description": "md5 checksum of content"
        },
        "crc": {
          "type": "string",
          "description": "internal crc value of crypt operation"
        }
      }
    },
    "Item": {
      "type": "object",
      "properties": {
        "itemid": {
          "type": "string",
          "description": "article number and reference for issueing licenses"
        },
        "itemname": {
          "type": "string",
          "description": "name of article",
          "example": "pangalactic gargle blaster"
        },
        "firmcode": {
          "type": "integer",
          "format": "uint32",
          "default": 6000274
        },
        "productcode": {
          "type": "integer",
          "format": "uint32",
          "description": "product code for encryption"
        }
      }
    },
    "ReturnMessage": {
      "type": "object",
      "properties": {
        "ReturnCode": {
          "type": "string",
          "format": "byte",
          "description": "error code for the user as hex string starting with 0x"
        },
        "ErrorText": {
          "type": "string",
          "description": "error message for the user"
        },
        "InternalErrorCode": {
          "type": "string",
          "format": "byte",
          "description": "zero for errors in php module, non zero for application errors"
        },
        "InternalErrorText": {
          "type": "string",
          "description": "error message for internal error"
        },
        "Version": {
          "type": "string",
          "description": "version information"
        }
      }
    }
  }
}